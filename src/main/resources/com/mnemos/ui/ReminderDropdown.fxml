<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mnemos.ui.ReminderDropdownController"
      style="-fx-background-color: transparent;">
   <children>
      <VBox fx:id="dropdownPane" spacing="8" styleClass="reminder-dropdown"
            style="-fx-padding: 15; -fx-background-color: #252525; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0, 0, 5);">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="8">
               <children>
                  <Label text="ðŸ”” Remind Me" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                  <Region HBox.hgrow="ALWAYS"/>
                  <Button text="âœ•" onAction="#handleClose" 
                          style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-font-size: 12px; -fx-cursor: hand;"/>
               </children>
            </HBox>
            
            <!-- Quick Options -->
            <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
               <children>
                  <Button text="â° Later Today (6:00 PM)" onAction="#handleLaterToday" 
                          maxWidth="Infinity" styleClass="reminder-option-btn"/>
                  <Button text="ðŸŒ… Tomorrow Morning (9:00 AM)" onAction="#handleTomorrowMorning" 
                          maxWidth="Infinity" styleClass="reminder-option-btn"/>
               </children>
            </VBox>
            
            <!-- Custom Date/Time Section -->
            <VBox fx:id="customSection" spacing="8" style="-fx-padding: 10 0 0 0;">
               <children>
                  <Label text="Pick Date &amp; Time" style="-fx-text-fill: #888; -fx-font-size: 11px;"/>
                  <HBox spacing="8" alignment="CENTER_LEFT">
                     <children>
                        <DatePicker fx:id="datePicker" promptText="Date" prefWidth="130" styleClass="modern-date-picker"/>
                        <Spinner fx:id="hourSpinner" prefWidth="60" editable="true"/>
                        <Label text=":" style="-fx-text-fill: #888;"/>
                        <Spinner fx:id="minuteSpinner" prefWidth="60" editable="true"/>
                     </children>
                  </HBox>
                  <Button text="Set Reminder" onAction="#handleCustomReminder" 
                          maxWidth="Infinity" styleClass="action-btn" style="-fx-font-size: 12px;"/>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
