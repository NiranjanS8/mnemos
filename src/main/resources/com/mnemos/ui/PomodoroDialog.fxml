<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mnemos.ui.PomodoroController"
      style="-fx-background-color: transparent;">
   <children>
      <VBox fx:id="contentPane" alignment="CENTER" spacing="15" 
            style="-fx-padding: 25; -fx-background-color: #1a1a1a; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0, 0, 5);">
         <children>
            <!-- Custom Title Bar -->
            <HBox alignment="CENTER_RIGHT" style="-fx-padding: 0 0 5 0;">
               <children>
                  <Label text="ðŸ… Pomodoro Timer" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                  <Region HBox.hgrow="ALWAYS"/>
                  <Button text="âœ•" onAction="#handleClose" fx:id="closeButton"
                          style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 5 10;"/>
               </children>
            </HBox>
            
            <!-- Duration Settings (shown when stopped) -->
            <VBox fx:id="settingsPane" spacing="10" alignment="CENTER">
               <children>
                  <Label text="Duration Settings" style="-fx-text-fill: #888; -fx-font-size: 11px;"/>
                  <HBox spacing="15" alignment="CENTER">
                     <children>
                        <!-- Work Duration -->
                        <VBox spacing="3" alignment="CENTER">
                           <Label text="Work" style="-fx-text-fill: #6c8cff; -fx-font-size: 11px;"/>
                           <Spinner fx:id="workSpinner" prefWidth="70" editable="true"/>
                           <Label text="min" style="-fx-text-fill: #666; -fx-font-size: 10px;"/>
                        </VBox>
                        <!-- Break Duration -->
                        <VBox spacing="3" alignment="CENTER">
                           <Label text="Break" style="-fx-text-fill: #4ecdc4; -fx-font-size: 11px;"/>
                           <Spinner fx:id="breakSpinner" prefWidth="70" editable="true"/>
                           <Label text="min" style="-fx-text-fill: #666; -fx-font-size: 10px;"/>
                        </VBox>
                     </children>
                  </HBox>
                  <!-- Quick Presets -->
                  <HBox spacing="8" alignment="CENTER">
                     <Button text="25/5" onAction="#handlePreset25" styleClass="preset-btn"/>
                     <Button text="50/10" onAction="#handlePreset50" styleClass="preset-btn"/>
                     <Button text="90/20" onAction="#handlePreset90" styleClass="preset-btn"/>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Timer Display -->
            <VBox alignment="CENTER" spacing="5">
               <Label fx:id="stateLabel" text="Ready to Focus" style="-fx-text-fill: #888; -fx-font-size: 14px;"/>
               <Label fx:id="timerLabel" text="25:00" style="-fx-text-fill: #e0e0e0; -fx-font-size: 48px; -fx-font-weight: bold;"/>
            </VBox>
         
            <!-- Progress Indicator -->
            <javafx.scene.control.ProgressBar fx:id="progressBar" prefWidth="250" prefHeight="8" 
                                              style="-fx-accent: #6c8cff;"/>
         
            <!-- Control Buttons -->
            <HBox spacing="10" alignment="CENTER">
               <Button fx:id="startButton" text="Start Work" onAction="#handleStart" 
                       styleClass="action-btn" style="-fx-min-width: 100; -fx-font-size: 12px;"/>
               <Button fx:id="pauseButton" text="Pause" onAction="#handlePause" 
                       styleClass="icon-btn" style="-fx-min-width: 80; -fx-font-size: 12px;" disable="true"/>
               <Button fx:id="stopButton" text="Stop" onAction="#handleStop" 
                       styleClass="icon-btn" style="-fx-min-width: 80; -fx-font-size: 12px;" disable="true"/>
            </HBox>
         
            <!-- Pomodoro Count -->
            <Label fx:id="pomodoroCountLabel" text="ðŸ… 0 Pomodoros completed" 
                   style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
         </children>
      </VBox>
   </children>
</StackPane>
