<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mnemos.ui.NotesController">
   <children>
      <!-- List View -->
      <VBox fx:id="listViewbox" spacing="10.0" style="-fx-padding: 10;">
         <children>
            <Button maxWidth="Infinity" onAction="#handleNewNote" styleClass="action-btn" text="+ New Note" />
            <ListView fx:id="notesListView" VBox.vgrow="ALWAYS" styleClass="custom-list-view"/>
         </children>
      </VBox>
      
      <!-- Editor View -->
      <VBox fx:id="editorViewbox" visible="false" spacing="10.0" style="-fx-padding: 10; -fx-background-color: rgba(30,30,30,0.95);">
         <children>
            <HBox spacing="10.0">
               <Button onAction="#handleBack" text="â†" styleClass="icon-btn"/>
               <TextField fx:id="titleField" promptText="Title" HBox.hgrow="ALWAYS" styleClass="title-field"/>
               <Button onAction="#handleDelete" text="ðŸ—‘" styleClass="icon-btn-danger"/>
            </HBox>
            <TextArea fx:id="contentArea" promptText="Start typing..." VBox.vgrow="ALWAYS" wrapText="true" styleClass="content-area"/>
            
            <!-- Linked Items Section -->
            <VBox fx:id="linkedItemsSection" spacing="5" style="-fx-background-color: rgba(255,255,255,0.05); -fx-padding: 8; -fx-background-radius: 6;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <javafx.scene.control.Label text="ðŸ”— Linked Items" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #6c8cff;"/>
                    <javafx.scene.layout.Region HBox.hgrow="ALWAYS"/>
                    <Button text="+ Add Link" onAction="#handleAddLink" style="-fx-background-color: transparent; -fx-text-fill: #6c8cff; -fx-font-size: 11px; -fx-cursor: hand;"/>
                </HBox>
                <ListView fx:id="linkedItemsListView" prefHeight="80" styleClass="custom-list-view"/>
            </VBox>
            
            <javafx.scene.control.Label fx:id="statusLabel" text="Saved" style="-fx-font-size: 10; -fx-text-fill: gray;" alignment="CENTER_RIGHT" maxWidth="Infinity"/>
         </children>
      </VBox>
   </children>
</StackPane>
